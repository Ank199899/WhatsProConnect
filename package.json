{
  "name": "whatspro-connect",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -H 0.0.0.0 -p 3007",
    "build": "next build",
    "start": "next start -H 0.0.0.0 -p 3007",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "whatsapp-server": "node server/whatsapp-server.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run whatsapp-server\"",
    "prod": "concurrently \"npm run start\" \"npm run whatsapp-server\"",
    "build:prod": "npm run build && npm run prod",
    "auto-start": "chmod +x scripts/auto-start.sh && ./scripts/auto-start.sh",
    "build-start": "chmod +x scripts/build-and-start.sh && ./scripts/build-and-start.sh",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:delete": "pm2 delete all",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 list",
    "pm2:save": "pm2 save",
    "production": "npm run build && npm run pm2:start"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.52.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "framer-motion": "^12.23.6",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.525.0",
    "multer": "^2.0.2",
    "next": "15.4.1",
    "next-intl": "^4.3.4",
    "node-fetch": "^2.7.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "tailwind-scrollbar": "^4.0.2",
    "uuid": "^11.1.0",
    "whatsapp-web.js": "^1.31.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
